{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Emit Options */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "composite": true,
    "declarationDir": "./out/typings",
    "outDir": "./out",
    "tsBuildInfoFile": "./out/ts-out-info.lib",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,
    /* Bundled library declaration files that describe the target runtime environment. */
    "lib": [
      "dom",
      "esnext"
    ],
    /* Package names to be included without being referenced in a source file. */
    "types": [
      "node",
      "jest"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.json"
  ],
  "exclude": [
    "**/node_modules/**",
    "node_modules",
    "src/archives/",
    // "lib",
    // "**/jest.*.js"
  ]
}
