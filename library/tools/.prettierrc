{
  "semi": true,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "printWidth": 80,
  "proseWrap": "never",
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "insertPragma": false,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": false,
  "overrides": [
    {
      "files": "*.{test,spec}.{js,ts,mts,cts}",
      "options": {
        "printWidth": 120,
        "proseWrap": "never"
      }
    }
  ],
  "plugins": [
    "prettier-plugin-organize-attributes",
    "prettier-plugin-packagejson",
    "prettier-plugin-sh"
  ]
}
